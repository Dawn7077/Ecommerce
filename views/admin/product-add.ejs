 <script>
    document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.image-cropper').forEach(el => {
        el.style.display = 'none';
    });
    });


     console.log("Cropper global check:", typeof Cropper); // should print "function"
    let croppers = {}; // Store cropper instances globally

// Initialize cropper for each image input
function initCropper(event, index) {
  const file = event.target.files[0];
  if (!file) {
    console.log('No file selected for input' + index);
    return;
  }

  console.log('Initializing cropper for input' + index);

  const imgView = document.getElementById('imgView' + index);
//   const cropContainer = imgView.closest('.row').querySelector('.image-cropper');
  const cropContainer = imgView.parentElement.nextElementSibling; 
  const cropImage = document.getElementById('croppedImg' + index);
  const saveButton = document.getElementById('saveButton' + index);
  const input = document.getElementById('input' + index);

  // Show preview image
  const previewURL = URL.createObjectURL(file);
  imgView.src = previewURL;
  imgView.style.maxWidth = '300px';
  imgView.style.maxHeight = '300px';
  imgView.style.display = 'block';

  // Show crop container
  cropContainer.style.display = 'flex';
  cropContainer.style.flexDirection = 'column';
  cropContainer.style.gap = '10px';
  
  cropImage.src = previewURL;
  cropImage.style.maxWidth = '100%';
  cropImage.style.maxHeight = '400px';

  // Destroy existing cropper if any
  if (croppers[index]) {
    console.log('Destroying existing cropper for input' + index);
    croppers[index].destroy();
    delete croppers[index];
  }

  // Wait for image to load before initializing Cropper
  cropImage.onload = function() {
    console.log('Image loaded, creating cropper for input' + index);
    
    try {
      croppers[index] = new Cropper(cropImage, {
        aspectRatio: 1,
        viewMode: 1,
        autoCropArea: 1,
        zoomable: true,
        scalable: true,
        ready: function() {
          console.log('✓ Cropper ready for input' + index);
        }
      });
    } catch (error) {
      console.error('✗ Error creating cropper:', error);
    }
  };

  // Save cropped image handler
  saveButton.onclick = function () {
    console.log('Save button clicked for input' + index);
    
    const cropper = croppers[index];
    if (!cropper) {
      alert('Cropper not initialized. Please wait for the image to load.');
      return;
    }

    try {
      // Get cropped canvas
      const canvas = cropper.getCroppedCanvas({ 
        width: 440, 
        height: 440,
        imageSmoothingEnabled: true,
        imageSmoothingQuality: 'high'
      });

      if (!canvas) {
        alert('Failed to crop image');
        return;
      }

      // Update preview with cropped image
      imgView.src = canvas.toDataURL('image/jpeg', 0.9);

      // Convert canvas to blob and create file
      canvas.toBlob((blob) => {
        if (!blob) {
          alert('Failed to create image blob');
          return;
        }

        const fileName = `cropped-${Date.now()}-${index}.jpg`;
        const croppedFile = new File([blob], fileName, { type: 'image/jpeg' });
        
        // Replace input files
        const dataTransfer = new DataTransfer();
        dataTransfer.items.add(croppedFile);
        input.files = dataTransfer.files;

        console.log('✓ Cropped file saved:', fileName, 'Size:', blob.size, 'bytes');
        
        // Hide crop container and destroy cropper
        cropContainer.style.display = 'none';
        cropper.destroy();
        delete croppers[index];
        
      }, 'image/jpeg', 0.9);

    } catch (error) {
      console.error('✗ Error saving cropped image:', error);
      alert('Error processing image: ' + error.message);
    }
  };
}

// Thumbnail  
function handleFileSelect(event) {
  const addedImagesContainer = document.getElementById('addedImagesContainer');
  if (!addedImagesContainer) return;
  
  addedImagesContainer.innerHTML = '';
  const files = event.target.files;
  
  for (let i = 0; i < files.length; i++) {
    const thumb = document.createElement('img');
    thumb.src = URL.createObjectURL(files[i]);
    thumb.style.width = '50px';
    thumb.style.height = '50px';
    thumb.style.objectFit = 'cover';
    thumb.style.marginRight = '5px';
    thumb.style.border = '1px solid #ddd';
    thumb.style.borderRadius = '4px';
    addedImagesContainer.appendChild(thumb);
  }
}

// Attach listeners to all image inputs
document.addEventListener('DOMContentLoaded', function() {
  console.log('Attaching event listeners to image inputs');
  
  ['input1', 'input2', 'input3', 'input4'].forEach((id, i) => {
    const el = document.getElementById(id);
    if (el) {
      el.addEventListener('change', (e) => {
        console.log(`File selected for ${id}`);
        initCropper(e, i + 1);
        if (i === 0) handleFileSelect(e); // Only first input shows thumbnails
      });
      console.log(`✓ Event listener attached to ${id}`);
    } else {
      console.warn(`✗ Element ${id} not found`);
    }
  });
});

// Form validation
function validateForm() {
    console.log('Validating form...');
    clearErrorMessages();

    const name = document.querySelector('[name="productName"]').value.trim();
    const description = document.getElementById('descriptionId').value.trim();
    const brand = document.querySelector('[name="brand"]').value;
    const regularPrice = parseFloat(document.querySelector('[name="regularPrice"]').value);
    const salePrice = parseFloat(document.querySelector('[name="salePrice"]').value);
    const quantity = parseInt(document.querySelector('[name="quantity"]').value);
    const color = document.querySelector('[name="color"]').value.trim();
    const category = document.querySelector('[name="category"]').value;
    const images = document.getElementById('input1').files;

    let valid = true;

    if (!name) {
        showError('productName-error', 'Please enter a product name');
        valid = false;
    }
    
    if (!description) {
        showError('description-error', 'Please enter a description');
        valid = false;
    } else if (!/^[a-zA-Z\s.,'!&()-]+$/.test(description)) {
        showError('description-error', 'Description should only contain alphabetic characters and basic punctuation');
        valid = false;
    }

    if (!brand) {
        showError('brand-error', 'Please select a brand');
        valid = false;
    }

    if (!category) {
        showError('category-error', 'Please select a category');
        valid = false;
    }
    
    if (isNaN(regularPrice) || regularPrice <= 0) {
        showError('regularPrice-error', 'Enter a valid regular price greater than 0');
        valid = false;
    }
    
    if (isNaN(salePrice) || salePrice < 0) {
        showError('salePrice-error', 'Enter a valid sale price (0 or greater)');
        valid = false;
    }
    
    if (!isNaN(regularPrice) && !isNaN(salePrice) && regularPrice <= salePrice) {
        showError('regularPrice-error', 'Regular price must be greater than sale price');
        valid = false;
    }
    
    if (isNaN(quantity) || quantity < 0) {
        showError('quantity-error', 'Enter a valid quantity (0 or greater)');
        valid = false;
    }
    
    if (!color) {
        showError('color-error', 'Please enter a color');
        valid = false;
    }
    
    if (images.length === 0) {
        showError('images-error', 'Please upload at least one image');
        valid = false;
    }

    if (valid) {
        console.log('✓ Form validation passed');
    } else {
        console.log('✗ Form validation failed');
    }

    return valid;
}

function showError(id, msg) {
  const errorEl = document.getElementById(id);
  if (errorEl) {
    errorEl.innerText = msg;
    errorEl.style.display = 'block';
  }
}

function clearErrorMessages() {
  document.querySelectorAll('.error-message').forEach(e => {
    e.innerText = '';
    e.style.display = 'none';
  });
}

function validateAndSubmit() {
  console.log("/addProducts form submission triggered");
  
  // Check if any croppers are still active
  const activeCroppers = Object.keys(croppers).length;
  if (activeCroppers > 0) {
    alert(`Please save all cropped images before submitting. ${activeCroppers} image(s) are still being edited.`);
    return false;
  }
  
  if (validateForm()) {
    console.log('✓ Submitting form...');
    document.forms[0].submit();
  } else {
    console.log('✗ Form validation failed, not submitting');
  }
}
</script>

